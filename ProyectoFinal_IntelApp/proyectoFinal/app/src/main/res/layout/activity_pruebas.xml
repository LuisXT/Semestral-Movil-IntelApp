<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/borde"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="92dp"
        android:gravity="center"
        android:text="Prueba de Inteligencia"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"
        android:textColor="#000"/>

    <ScrollView
        android:id="@+id/PreguntasScrollView"
        android:layout_width="351dp"
        android:layout_height="363dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="10dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/visual"
                android:fontFamily="sans-serif-black"
                android:textSize="20sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="1. ¿Cuándo ves un escenario o lugar en específico, eres capas de memorizar cada detalle que se presente?"
                tools:ignore="HardcodedText"/>

            <Spinner
                android:id="@+id/visual1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="2. ¿Viendo tu entorno actual, serias capas de determinar que tanto mide en tres dimensiones, los objetos del alrededor?"
                tools:ignore="HardcodedText"/>

            <Spinner
                android:id="@+id/visual2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="3. ¿Viendo un objeto X, serias capas de determinar con exactitud el color del objeto?"
                tools:ignore="HardcodedText"/>

            <Spinner
                android:id="@+id/visual3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="4. ¿Eres bueno o rápido armando rompecabezas?"
                tools:ignore="HardcodedText"/>

            <Spinner
                android:id="@+id/visual4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="5. ¿Eres capaz de recrear imágenes/situaciones/entornos en tu cabeza con solo oír una descripción de esta?"
                tools:ignore="HardcodedText"/>

            <Spinner
                android:id="@+id/visual5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/auditivo"
                android:fontFamily="sans-serif-black"
                android:textSize="20sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="1. ¿Eres bueno identificando notas musicales con solo oírlas?"
                tools:ignore="HardcodedText"/>

            <Spinner
                android:id="@+id/auditivo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="2. ¿Eres bueno siguiendo o creando ritmos o tiempos?"
                tools:ignore="HardcodedText"/>

            <Spinner
                android:id="@+id/auditivo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="3. ¿Eres bueno diferenciando diferentes músicas respecto a su género, incluso sin saber el género al que pertenecen?"
                tools:ignore="HardcodedText"/>

            <Spinner
                android:id="@+id/auditivo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="4. ¿Eres capaz de unir varios sonidos o melodías al punto de crear armonía entre ellos?"
                tools:ignore="HardcodedText"/>

            <Spinner
                android:id="@+id/auditivo4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="5. ¿Eres capaz de identificar una pieza musical que conoces con solo oír una estrofa o parte de esta?"
                tools:ignore="HardcodedText"/>

            <Spinner
                android:id="@+id/auditivo5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Kinestésico"
                tools:ignore="HardcodedText"
                android:fontFamily="sans-serif-black"
                android:textSize="20sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="1. ¿Eres bueno bailando, al punto de no quedar mal?"
                tools:ignore="HardcodedText"/>

            <Spinner
                android:id="@+id/kine1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="2. ¿Tienes buen equilibrio, al punto de casi no caerte con una pierna alzada?"
                tools:ignore="HardcodedText"/>

            <Spinner
                android:id="@+id/kine2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="3. ¿Eres capaz de expresarte perfectamente con solo movimientos o gestos?"
                tools:ignore="HardcodedText"/>

            <Spinner
                android:id="@+id/kine3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="4. ¿Eres capas de poder imitar un set de movimientos al verlo?"
                tools:ignore="HardcodedText"/>

            <Spinner
                android:id="@+id/kine4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="5. ¿Eres ágil, al punto de poder dar una voltereta?"
                tools:ignore="HardcodedText"/>

            <Spinner
                android:id="@+id/kine5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/Enviar"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/enviar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PreguntasScrollView"
        android:textColor="@drawable/btn_text"
        android:background="@drawable/btn_estilo"/>

    <ImageView
        android:id="@+id/imageView2"
        android:contentDescription="@string/es_el_icono_principal_de_la_app_aparecera_en_el_resto_de_pantalla_en_la_parte_inferior_de_la_ventana_junto_al_boton_regresar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/Enviar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cerebro" />

</androidx.constraintlayout.widget.ConstraintLayout>

