<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/borde"
    tools:context=".AgregarAmigoActivity">

    <ImageView
        android:id="@+id/imageView"
        android:contentDescription="Logo de pantalla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="450dp"
        app:srcCompat="@drawable/amigo"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="-400dp"
        android:layout_centerHorizontal="true"
        android:text="Agregar Amigo:"
        android:textSize="20sp"
        tools:ignore="HardcodedText"
        android:fontFamily="sans-serif-black"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/NomUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:ems="13"
        android:inputType="textPersonName"
        android:gravity="center"
        android:hint="Lipson123"
        android:autofillHints="Nombre?Usuario"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/Agregar"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_below="@+id/NomUsuario"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="@string/agregar"
        android:textColor="@drawable/btn_text"
        android:background="@drawable/btn_estilo"/>


    <ImageView
        android:id="@+id/imageView2"
        android:contentDescription="@string/es_el_icono_principal_de_la_app_aparecera_en_el_resto_de_pantalla_en_la_parte_inferior_de_la_ventana_junto_al_boton_regresar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@id/Agregar"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/cerebro" />

</RelativeLayout>